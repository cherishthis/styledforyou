  <script>
    let selectedDressSrc = '';
    let selectedAccessorySrc = '';

    // Handle product hover and selection for the 2nd flow
    document.querySelectorAll('.recommendation-card').forEach(card => {
      card.addEventListener('click', function() {
        // Highlight the selected card
        document.querySelectorAll('.recommendation-card').forEach(c => c.style.border = '1px solid #ddd');
        card.style.border = '2px solid #00b4d8';

        // Store selected product
        if (card.dataset.product) {
          selectedDressSrc = card.querySelector('img').src;
        }

        // Show proceed button
        document.getElementById('proceedToAccessories').classList.remove('hidden');
      });
    });

    // Transition to 3rd flow
    document.getElementById('proceedToAccessories').addEventListener('click', function() {
      document.getElementById('secondFlow').classList.add('hidden');
      document.getElementById('thirdFlow').classList.remove('hidden');
    });

    // Handle accessory selection in the 3rd flow
    document.querySelectorAll('[data-accessory]').forEach(card => {
      card.addEventListener('click', function() {
        // Highlight the selected accessory
        document.querySelectorAll('[data
